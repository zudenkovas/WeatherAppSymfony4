{% extends 'base.html.twig' %}

{% block title %}Weather!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Sveiki! ✅</h1>

    Dienos oras yra toks:
    <ul>
        <li>Diena: {{ weatherData.date }}</li>
        <li>Temperatūra dieną: {{ weatherData.dayTemp }}</li>
        <li>Temperatūra naktį: {{ weatherData.nightTemp }}</li>
        <li>Dangus: {{ weatherData.sky }}</li>

    </ul>
</div>
{% endblock %}
